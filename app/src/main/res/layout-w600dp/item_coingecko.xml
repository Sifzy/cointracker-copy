<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_view_item"
        android:layout_width="@dimen/item_transform_image_length"
        android:layout_height="@dimen/item_transform_image_length"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/text_view_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/image_view_item"
        app:layout_constraintStart_toStartOf="@id/image_view_item"
        app:layout_constraintTop_toBottomOf="@id/image_view_item"
        tools:text="This is item" />

    <TextView
        android:id="@+id/text_view_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/text_view_item"
        app:layout_constraintStart_toStartOf="@id/text_view_item"
        app:layout_constraintTop_toBottomOf="@id/text_view_item"
        tools:text="This is price" />

    <TextView
        android:id="@+id/text_view_hilo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/text_view_price"
        app:layout_constraintStart_toStartOf="@id/text_view_price"
        app:layout_constraintTop_toBottomOf="@id/text_view_price"
        tools:text="This is hi low price" />

    <TextView
        android:id="@+id/textViewVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/text_view_hilo"
        app:layout_constraintStart_toStartOf="@id/text_view_hilo"
        app:layout_constraintTop_toBottomOf="@id/text_view_hilo"
        tools:text="This is cap and volume" />
</androidx.constraintlayout.widget.ConstraintLayout>